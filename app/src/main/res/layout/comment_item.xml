<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/comment_item_content">

    <ImageView
        android:id="@+id/comment_portrait"
        android:layout_height="48dip"
        android:layout_width="48dip"

        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="8.0dip" />

    <TextView
        android:id="@+id/comment_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@id/comment_portrait"
        android:layout_toRightOf="@+id/comment_portrait"

        android:layout_marginLeft="8.0dip"
        android:gravity="left"

        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@id/comment_portrait"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8.0dip"
        android:gravity="right"

        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/comment_nickname"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"

        android:layout_marginRight="8.0dip"

        android:layout_alignLeft="@+id/comment_nickname"

        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>