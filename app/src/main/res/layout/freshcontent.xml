<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fresh_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/blackground"
              android:orientation="vertical" >


    <com.birdcopy.BirdCopyApp.Component.UI.CustomSwipeToRefresh
        android:id="@+id/fresh_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.birdcopy.liubin.Component.UI.grid.StaggeredGridView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fresh_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blackground"
                app:item_margin="8dp"
                app:column_count="@integer/grid_column_count" />

    </com.birdcopy.BirdCopyApp.Component.UI.CustomSwipeToRefresh>


</LinearLayout>