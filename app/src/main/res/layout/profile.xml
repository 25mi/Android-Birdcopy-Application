<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackground"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal"
            >

        <LinearLayout android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent">

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">


                <RelativeLayout
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:id="@+id/userprofile"
                        android:layout_centerVertical="true"

                        android:layout_gravity="center"
                        android:layout_marginTop="50.0px"
                        android:scaleType="centerCrop"
                        >

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/userheadimage"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:background="@drawable/default_head"
                            />

                    <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击更换头像"
                            android:id="@+id/userheadalert"
                            android:layout_centerInParent="true"
                            />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的昵称"
                    android:id="@+id/usernikename"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/graybutton"
                    android:text="改昵称"
                    android:id="@+id/changeNanmeButton"
                    android:gravity="center"
                    android:layout_below="@id/usernikename"
                    android:layout_alignLeft="@+id/usernikename"
                    android:layout_alignRight="@+id/usernikename"/>


            </LinearLayout>




            <LinearLayout android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="200dp"
                          android:layout_marginTop="20dp"
                          android:layout_marginLeft="50dp"
                          android:layout_marginRight="50dp">

                <Button
                        style="?android:attr/button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/greenbutton"
                        android:text="成为年费会员"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/buycoinbutton"
                        android:gravity="center"/>

                <Button
                        style="?android:attr/button"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/graybutton"
                        android:text="分享应用"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/sharecoinbutton"
                        android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>